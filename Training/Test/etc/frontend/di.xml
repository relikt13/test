    </type>
    <type name="Magento\Framework\View\Element\Template">
        <plugin name="training_test_template" type="Training\Test\Plugin\Block\Template" />
    </type>
    <type name="Magento\Catalog\Controller\Product\View">
        <plugin name="training_test_products_view" type="Training\Test\Plugin\Controller\Products\View" />
    </type>
    <type name="Magento\Framework\App\Router\NoRouteHandlerList">
        <arguments>
            <argument name="handlerClassesList" xsi:type="array">
